{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "lib": ["es2018"],
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "noImplicitAny": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": ["scripts/**/*"],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
} 